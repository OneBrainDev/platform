{
  "preset": "laravel",
  "rules": {
    "single_line_empty_body": true,
    "declare_strict_types": true,
    "blank_line_after_namespace": true,
    "blank_line_after_opening_tag": false,
    "linebreak_after_opening_tag": false,
    "ordered_class_elements": {
      "sort_algorithm": "alpha"
    }
  }
}