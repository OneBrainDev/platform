{
   "name": "platform",
   "private": true,
   "version": "0.0.0",
   "type": "module",
   "scripts": {
      "format": "prettier --write .",
      "lint": "eslint . --fix",
      "dev:blank": "pnpm --filter=@platform/blank run build-only --watch",
      "dev:web": "pnpm --filter=@platform/web run build-only --watch",
      "dev:watch": "run-p \"dev:blank\" \"dev:web\""
   },
   "pnpm": {
      "supportedArchitectures": {
         "os": [
            "darwin",
            "linux"
         ],
         "cpu": [
            "x64",
            "arm64"
         ]
      }
   },
   "dependencies": {
      "vue": "^3.5.13"
   },
   "devDependencies": {
      "@tsconfig/node22": "^22.0.1",
      "@types/jsdom": "^21.1.7",
      "@types/node": "^22.14.0",
      "@vitejs/plugin-vue": "^5.2.3",
      "@vitest/eslint-plugin": "1.1.39",
      "@vue/eslint-config-prettier": "^10.2.0",
      "@vue/eslint-config-typescript": "^14.5.0",
      "@vue/test-utils": "^2.4.6",
      "@vue/tsconfig": "^0.7.0",
      "eslint": "^9.24.0",
      "eslint-plugin-vue": "^10.0.0",
      "jsdom": "^26.0.0",
      "npm-run-all2": "^7.0.2",
      "prettier": "^3.5.3",
      "typescript": "~5.8.3",
      "vite": "6.2.5",
      "vite-plugin-vue-devtools": "^7.7.2",
      "vitest": "^3.1.1",
      "vue-tsc": "^2.2.8"
   }
}
