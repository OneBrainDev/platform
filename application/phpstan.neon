includes:
    - ./vendor/larastan/larastan/extension.neon
    - ./vendor/yamadashy/phpstan-friendly-formatter/extension.neon

parameters:
    errorFormat: friendly

    paths:
        - app/
        - modules/

    level: 8

    ignoreErrors:
      - identifier: trait.unused

    excludePaths:
        - ./app/tests/*
        - ./modules/*/tests/*

