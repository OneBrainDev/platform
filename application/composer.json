{
  "name": "platform/application",
  "type": "project",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "dshafik/bag": "^1.3",
    "godruoyi/php-snowflake": "^3.1",
    "joecianflone/modelproperties": "^1.0",
    "inertiajs/inertia-laravel": "^2.0.0",
    "laravel/framework": "^11.9",
    "laravel/horizon": "^5.27",
    "laravel/tinker": "^2.9",
    "platform/users": "*"
  },
  "require-dev": {
    "composer/composer": "^2.7",
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "^3.0",
    "laravel/pint": "^1.13",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "yamadashy/phpstan-friendly-formatter": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Platform\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "task platform:env"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.infrastructure/environment/app.env') || copy('.infrastructure/environment/app.env.example', '.infrastructure/environment/app.env');\"",
      "@php -r \"file_exists('.infrastructure/environment/docker.env') || copy('.infrastructure/environment/docker.env.example', '.infrastructure/environment/docker.env');\"",
      "task platform:env"
    ],
    "post-create-project-cmd": [
      "task platform:env",
      "@php artisan migrate --graceful --ansi"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "path",
      "url": "modules/*",
      "options": {
        "symlink": true
      }
    }
  ]
}
