{
   "name": "platform/application",
   "type": "project",
   "description": "",
   "keywords": [],
   "license": "MIT",
   "require": {
      "php": "^8.3",
      "dshafik/bag": "^1.3",
      "inertiajs/inertia-laravel": "^2.0.0",
      "joecianflone/modelproperties": "^1.0",
      "laravel/cashier": "^15.6",
      "laravel/framework": "^11.9",
      "laravel/horizon": "^5.27",
      "laravel/pennant": "^1.14",
      "laravel/tinker": "^2.9",
      "platform/accounts": "*",
      "predis/predis": "^2.3",
      "tightenco/ziggy": "^2.5",
      "platform/clinics": "*",
      "platform/users": "*"
   },
   "require-dev": {
      "barryvdh/laravel-ide-helper": "^3.4",
      "composer/composer": "^2.7",
      "fakerphp/faker": "^1.23",
      "larastan/larastan": "^3.0",
      "laravel/pint": "^1.13",
      "mockery/mockery": "^1.6",
      "nunomaduro/collision": "^8.0",
      "pestphp/pest": "^3.0",
      "pestphp/pest-plugin-laravel": "^3.0",
      "yamadashy/phpstan-friendly-formatter": "^1.1"
   },
   "autoload": {
      "psr-4": {
         "Platform\\": "app/",
         "Database\\Factories\\": "database/factories/",
         "Database\\Seeders\\": "database/seeders/"
      }
   },
   "autoload-dev": {
      "psr-4": {
         "Tests\\": "tests/"
      }
   },
   "scripts": {
      "post-autoload-dump": [
         "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
         "@php artisan package:discover --ansi",
         "task platform:env",
         "@php artisan ziggy:generate --types"
      ],
      "post-update-cmd": [
         "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
         "task platform:env",
         "@php artisan ziggy:generate --types"
      ],
      "post-root-package-install": [
         "task platform:env-init"
      ],
      "post-create-project-cmd": [
         "task platform:env-init",
         "@php artisan migrate --graceful --ansi"
      ]
   },
   "extra": {
      "laravel": {
         "dont-discover": []
      }
   },
   "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true,
      "allow-plugins": {
         "pestphp/pest-plugin": true,
         "php-http/discovery": true
      }
   },
   "minimum-stability": "dev",
   "prefer-stable": true,
   "repositories": [
      {
         "type": "path",
         "url": "modules/*",
         "options": {
            "symlink": true
         }
      }
   ]
}